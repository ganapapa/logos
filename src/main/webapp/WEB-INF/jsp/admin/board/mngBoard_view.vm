<div class="right_content">
<form id="writeForm" name="writeForm" action="hp_board_delete_proc.jsp" method="post">
	<input type="hidden" name="redirectUrl" value="mngBoard_list.jsp?brdType=$!info.brdType&!searchParam.searchParamUrl"/>
	<input type="hidden" name="brdNum" id="brdNum" value="$!info.brdNum"/>
	<input type="hidden" name="brdType" id="brdType" value="$!info.brdType"/>
	<input type="hidden" name="attFileNo" id="attFileNo" value="$!attFileInfos.ATT1.attFileNo"/>
	
	<input type="hidden" name="brdRegId" id="brdRegId" value="$!SessionUtils.getAdminSeq($request)"/>
	<input type="hidden" name="brdRegNm" id="brdRegNm" value="$!SessionUtils.getAdminName($request)"/>
	
	<div class="t_icon">$!info.brdTypeNm 상세보기 <div class="r_txt"><div class="navi">Home &gt; 게시판관리 &gt; <strong>$!info.brdTypeNm</strong></div></div></div>
	<table cellpadding="0" cellspacing="0" class="write_table02" width="100%">
		<col width="15%" />
		<col width="35%" />
		<col width="15%" />
		<col width="35%" />
		<tr>
			<th>제목</th>
			<td colspan="3">$!info.brdTitle</td>
		</tr>
		<tr>
			<th>등록일</th>
			<td>$!DateUtils.getTime($!info.updTm, "yyyyMMddhhmmss", "yyyy-MM-dd")</td>
			<th>조회수</th>
			<td >$!info.brdReadCnt</td>
		</tr>
		<tr>
			<th>내용</th>
			<td colspan="3" style="padding:10px 0 10px 10px;height:100px;">$!info.brdMemo</td>
		</tr>
		
        <tr>
            <th>첨부파일</th>
            <td colspan="3">
				#multifile($attFileInfos) #**	멀티파일  뷰 메크로	*#
            </td>
        </tr>
		<tr>
			<th>공개여부</th>
			<td #if ($!info.brdType=="PUB") colspan="3" #end>
				<input type="radio" disabled #if ("$!info.brdOpenYn"=="Y")checked #end name="tmpBrdOpenYn" alt="공개여부" value="Y" /> <label for="brdOpenYn">공개</label>&nbsp;&nbsp;
				<input type="radio" disabled #if ("$!info.brdOpenYn"=="N")checked #end name="tmpBrdOpenYn" alt="공개여부" value="N" /> <label for="brdOpenYn">비공개</label>
			</td>
			<th>진행단계</th>
			<td>$!info.brdProgStNm</td>
		</tr>
	</table>
	<br>
	<table cellpadding="0" cellspacing="0" class="write_table02" width="100%">
		<col width="15%" />
		<col width="35%" />
		<col width="15%" />
		<col width="35%" />
		<tr>
			<th>등록일</th>
			<td>$!DateUtils.getTime($!info.regTm, "yyyyMMddhhmmss", "yyyy-MM-dd")</td>
			<th>등록자</th>
			<td>$!info.brdRegNm</td>
		</tr>
		<tr>
			<th>최근수정일</th>
			<td>$!DateUtils.getTime($!info.updTm, "yyyyMMddhhmmss", "yyyy-MM-dd")</td>
			<th>수정자</th>
			<td>$!info.brdUpdNm</td>
		</tr>
    </table>
	
	<div class="paging_box">
		<div class="pl_btn">
		#if ($!info.prevBrdNum != "0")
			<a href="mngBoard_view.jsp?brdType=$!info.brdType&brdNum=$!info.prevBrdNum&$!searchParamUrl"><img src="/admin/img/btn_pre.gif" alt="이전글" /></a>
		#end
		#if ($!info.nextBrdNum != "0")
			<a href="mngBoard_view.jsp?brdType=$!info.brdType&brdNum=$!info.nextBrdNum&$!searchParamUrl"><img src="/admin/img/btn_next.gif" alt="다음글" /></a>
		#end
		</div>
		<div class="pr_btn">
#if ($!info.brdRegId == $!SessionUtils.getAdminSeq($request) || $!SessionUtils.getAdminSeq($request) == "admin")
			<a href="javascript:f_delete();"><img src="/admin/img/btn_del.gif" alt="삭제" /></a>
			<a href="javascript:f_update();"><img src="/admin/img/btn_modi.gif" alt="수정" /></a>
			<a href="mngBoard_reply.jsp?brdNum=$!info.brdNum&brdType=$!info.brdType&$!searchParamUrl;"><img src="/admin/img/btn_reply.gif" alt="답변" /></a>
#end
			<a href="mngBoard_list.jsp?brdType=$!info.brdType&$!searchParam.searchParamUrl"><img src="/admin/img/btn_list.gif" alt="목록" /></a>
		</div>
	</div>

</form>
</div>
